<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/switch_linear_direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="switchLinearDirection"
                android:text="切换方向" />

            <Button
                android:id="@+id/switch_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="switchLayout"
                android:text="切换布局" />

            <Button
                android:id="@+id/spacer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addSpacer"
                android:text="间隔线" />

            <Button
                android:id="@+id/addHeaderFooter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addHeaderAndFooter"
                android:text="添加头部底部" />

            <Button
                android:id="@+id/interactive_animation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交互动画" />

            <Button
                android:id="@+id/skid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="skid"
                android:text="侧滑" />

        </LinearLayout>
    </HorizontalScrollView>

    <com.dn.ui.md.recycler.l3.WrapRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>